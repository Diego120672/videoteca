<!doctype html>
<html lang="it">

<head th:replace="~{layout/bs5.html::head}">
</head>
 
<body>

    <header th:replace="~{layout/bs5.html::header}">

    </header> 
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Lista Genere Film</h3>
                <select class="form-select" id="Genere" name="genre">
                    <option th:each="genre : ${genres}" th:value="${genre.id}">
                      <span th:text="${genre.name}"></span>
                    </option>
                </select>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-borderless table-primary align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Titolo</th>
                                <th>Regista</th>
                                <th>Durata</th>
                                <th>Genere</th>
                                <th>Data Rilasco</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <tr class="table-primary" th:each="film : ${films}">
                                <!-- <div th:if="${expression}"></div> -->
                                <td>
                                    <p th:text="${film.title}"></p>
                                </td>
                                <td>
                                    <p th:text="${film.director}"></p>
                                </td>
                                <td>
                                    <p>
                                    	<span th:text="${film.duration}"></span>
                                    	 <span>Minuti</span>
                                    </p>
                                </td>
                                <td>
                                    <p th:text="${film.genre_id}"></p>
                                </td>
                                <td>
                                    <p th:text="${film.published}"></p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <footer th:replace="~{layout/bs5.html::footer}">

    </footer>
    
</body>